@model ICollection<AccountGoWeb.Models.BalanceSheet>


@if (Model != null)
{
                  <div class="w-full grid grid-cols-1 gap-42">
                    <div class="dark:bg-gray-800 shadow-md rounded-lg">

                      <div class="overflow-w-auto w-full mb-6 text-darkPrimary">
                        <table class="w-full table-auto border-collapse bg-lightSecondary shadow-md text-darkPrimary"
                          style="display: table; min-width: 100%; table-layout: fixed;">
                          <thead class="bg-darkPrimary text-white text-sm uppercase font-semibold">
                            <tr>
                              <th class="p-4 border w-1/4 text-center">Account Code</th>
                              <th class="p-4 border w-2/4 text-center">Account Name</th>
                              <th class="p-4 border w-1/4 text-center">Amount</th>
                            </tr>
                          </thead>
          @foreach (var asset in Model.Where(a => a.AccountClassId == 1))
          {
                                            <tr class="text-sm uppercase font-semibold hover:bg-lightPrimary">
                                              <td class="p-4 border w-1/4"
                                                style="display: table-cell; text-align: center; vertical-align: middle; border: 1px solid #ccc;">
                @Html.ActionLink((string)string.Format("{0}", asset.AccountCode),
                                                                               "account",
                                                                               new { id = asset.AccountId },
                                                                               new { @class = "hover:text-blue-600" })
                                              </td>
                                              <td class="p-4 border w-2/4"
                                                style="display: table-cell; text-align: center; vertical-align: middle; border: 1px solid #ccc;">
                @asset.AccountName</td>
                                              <td class="p-4 border w-1/4"
                                                style="display: table-cell; text-align: center; vertical-align: middle; border: 1px solid #ccc;">
                @asset.Amount</td>
                                            </tr>
          }
                          <tr class="font-bold bg-gray-100">
                            <td colspan="2" class="p-4 border">Total Assets</td>
                            <td class="p-4 border text-right">@Model.Where(a => a.AccountClassId == 1).Sum(a => a.Amount)</td>
                          </tr>
                        </table>
                      </div>

                      <div class="overflow-x-auto w-full mb-6">
                        <table class="w-full table-auto border-collapse bg-lightSecondary shadow-md"
                          style="display: table; min-width: 100%; table-layout: fixed;">
                          <thead class="bg-darkPrimary text-white text-sm uppercase font-semibold">
                            <tr>
                              <th class="p-4 border w-1/4 text-center">Account Code</th>
                              <th class="p-4 border w-2/4 text-center">Account Name</th>
                              <th class="p-4 border w-1/4 text-center">Amount</th>
                            </tr>
                          </thead>
          @foreach (var liability in Model.Where(a => a.AccountClassId == 2))
          {
                                            <tr class="hover:bg-lightPrimary text-sm uppercase font-semibold">
                                              <td class="p-4 border w-1/4"
                                                style="display: table-cell; text-align: center; vertical-align: middle; border: 1px solid #ccc;">
                @Html.ActionLink((string)string.Format("{0}", liability.AccountCode), "account", new
                  {
                    id =
                                                                               liability.AccountId
                  }, new { @class = "hover:text-blue-600" })
                                              </td>
                                              <td class="p-4 border w-2/4"
                                                style="display: table-cell; text-align: center; vertical-align: middle; border: 1px solid #ccc;">
                @liability.AccountName</td>
                                              <td class="p-4 border w-1/4"
                                                style="display: table-cell; text-align: center; vertical-align: middle; border: 1px solid #ccc;">
                @liability.Amount</td>
                                            </tr>
          }
                          <tr class="font-bold bg-gray-100">
                            <td colspan="2" class="p-4 border">Total Liabilities</td>
                            <td class="p-4 border text-right">@Model.Where(a => a.AccountClassId == 2).Sum(a => a.Amount)</td>
                          </tr>
                        </table>
                      </div>

                      <div class="overflow-x-auto w-full mt-6">
                        <table class="w-full table-auto border-collapse bg-lightSecondary shadow-md"
                          style="display: table; min-width: 100%; table-layout: fixed;">
                          <thead class="bg-darkPrimary text-white text-sm uppercase font-semibold">
                            <tr>
                              <th class="p-4 border w-1/4 text-center">Account Code</th>
                              <th class="p-4 border w-2/4 text-center">Account Name</th>
                              <th class="p-4 border w-1/4 text-center">Amount</th>
                            </tr>
                          </thead>
          @foreach (var equity in Model.Where(a => a.AccountClassId == 3))
          {
                                            <tr class="hover:bg-lightPrimary text-sm uppercase font-semibold">
                                              <td class="p-4 border w-1/4"
                                                style="display: table-cell; text-align: center; vertical-align: middle; border: 1px solid #ccc;">
                @Html.ActionLink((string)string.Format("{0}", equity.AccountCode), "account", new { id = equity.AccountId },
                                                                               new { @class = "hover:text-blue-600" })
                                              </td>
                                              <td class="p-4 border w-2/4"
                                                style="display: table-cell; text-align: center; vertical-align: middle; border: 1px solid #ccc;">
                @equity.AccountName</td>
                                              <td class="p-4 border w-1/4"
                                                style="display: table-cell; text-align: center; vertical-align: middle; border: 1px solid #ccc;">
                @equity.Amount</td>
                                            </tr>
          }
                          <tr class="font-bold bg-gray-100">
                            <td colspan="2" class="p-4 border">Total Equities</td>
                            <td class="p-4 border text-right">@Model.Where(a => a.AccountClassId == 3).Sum(a => a.Amount)</td>
                          </tr>
                        </table>
                      </div>
                    </div>
                  </div>
}
else
{
                  <p>Error fetching data.</p>
}