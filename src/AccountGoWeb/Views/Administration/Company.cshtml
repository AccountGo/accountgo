@model Dto.Administration.Company
<div>
    <a href="#" id="linkEdit" class="btn" onclick="onClickEditButton();">
        <i class="fa fa-edit"></i>
        Edit
    </a>
</div>
<form action="~/administration/company" method="post">
    <div id="divCompanyCard" class="col-sm-9">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">General</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-2">Code</div>
                        <div class="col-sm-10">
                            <input asp-for="CompanyCode" class="form-control" type="text" placeholder="Code ..." />
                            <span asp-validation-for="CompanyCode" class="danger"></span>
                        </div>
                        @Html.HiddenFor(m => m.Id)
                    </div>
                    <div class="row">
                        <div class="col-sm-2">Name</div>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" type="text" placeholder="Name ..." />
                            <span asp-validation-for="Name" class="danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">Short Name</div>
                        <div class="col-sm-10">
                            <input asp-for="ShortName" class="form-control" type="text" placeholder="Short Name ..." />
                            <span asp-validation-for="ShortName" class="danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-9">
        <input id="btnSave" class="btn btn-sm btn-primary btn-flat pull-left disabledControl" type="submit" value="Save" />
        <a href="~/" class="btn btn-sm btn-default btn-flat pull-left">Close</a>
    </div>
</form>
@section scripts{
    <script src="~/js/custom.js" type="text/javascript"></script>
    <script>
        if (@Model.Id !== 0) {
            setFormDisabled("divCompanyCard");
        }
        
        function onClickEditButton() {
            document.getElementById("linkEdit").className = document.getElementById("linkEdit").className + " disabledControl";
            document.getElementById("btnSave").className = "btn btn-sm btn-primary btn-flat pull-left";
            setFormEnabled("divCompanyCard");
        }
    </script>
}