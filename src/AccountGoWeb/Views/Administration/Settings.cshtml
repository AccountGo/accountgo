@model Dto.Administration.GeneralLedgerSetting

<div class=" w-3/4 mx-auto lg:py-16">
  <button type="button" id="btnEdit" class="bg-yellow-500 hover:bg-yellow-600 text-white font-medium rounded-lg text-sm px-4 py-2.5 flex items-center space-x-2">
    <span class="fa fa-edit"></span> Edit
  </button>

  <h3 class="my-4 text-xl font-bold text-white dark:test-white">General Ledger Setup</h3>

  <form method="post" action="~/administration/savesettings">
    @Html.HiddenFor(model => model.Id)
    
    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
      <i class="fa fa-minus"></i>
    </button>

    <div class="grid gap-4 mb-4 sm:grid-cols-2 sm:gap-6 sm:mb-5" id="divGLSetup">
      
      <!-- Payable Account  -->
      <div class="sm:col-span-2">
        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" asp-for="PayableAccountId"></label>
        <select class=" bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" asp-for="PayableAccountId" asp-items="@ViewBag.Accounts"></select>
      </div>

      <!-- Purchase Discount Amount  -->
      <div class="sm:col-span-1">
        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" asp-for="PurchaseDiscountAccountId"></label>
        <select class=" bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" asp-for="PurchaseDiscountAccountId" asp-items="@ViewBag.Accounts"></select>
      </div>

      <!-- Goods Receipt  -->
      <div class="sm:col-span-1">
        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" asp-for="GoodsReceiptNoteClearingAccountId"></label>
        <select class=" bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" asp-for="GoodsReceiptNoteClearingAccountId" asp-items="@ViewBag.Accounts"></select>
      </div>

      <!-- Sales Discount Account  -->
      <div class="sm:col-span-1">
        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" asp-for="SalesDiscountAccountId"></label>
        <select class=" bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" asp-for="SalesDiscountAccountId" asp-items="@ViewBag.Accounts"></select>
      </div>

      <!-- Shipping Charge Account  -->
      <div class="sm:col-span-1">
        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" asp-for="ShippingChargeAccountId"></label>
        <select class=" bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" asp-for="ShippingChargeAccountId" asp-items="@ViewBag.Accounts"></select>
      </div>
    </div>

    <!-- Action Buttons  -->
    <div class="flex items-center space-x-4">
      <button type="submit" id="btnSave" class="text-white bg-slate-600 hover:bg-slate-200 focus:ring-4 focus:outline-none font medium rounded-lg text-sm px-5 py-2.5 text-center">
        <span class="fa fa-save"></span> Save
      </button>

      <a href="~/" class="text-white bg-slate-600 hover:bg-slate-200 focus:ring-4 focus:outline-none font medium rounded-lg text-sm px-5 py-2.5 text-center opacity-75">
        <i class="fa fa-times"></i>
          Cancel
      </a>
    </div>
  </form>
</div>

@section scripts{
<script src="~/js/custom.js" type="text/javascript"></script>
<script>
  $(function(){

    if (@Model.Id != 0) {
      setFormDisabled("divGLSetup");
    }

    $("#btnEdit").on("click", function() {
      $(this).removeClass("btn-warning").addClass("disabledControl");
      $("#btnSave").removeClass("disabledControl").addClass("btn-primary");
      $("#divGLSetup").removeClass("disabledControl");
      $("#PayableAccountId").focus();
    });

    $("#btnSave").on("click", function() {
      $(this).removeClass("btn-primary").addClass("disabledControl");
      $("#divGLSetup").addClass("disabledControl");
    });
  })
</script>
}