@model Dto.Sales.Customer
<div class="col-md-12">
    <a href="~/sales/customerallocations/@Model.Id"><i class="fa fa-tasks margin-a"></i>Allocations</a>
</div>
<div class="col-md-9">
    <form action="~/sales/updatecustomer" method="post">
        @Html.HiddenFor(m => m.Id)
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">General</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-2">No</div>
                        <div class="col-sm-10">No</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">Name</div>
                        <div class="col-sm-10"><input asp-for="Name" class="form-control" type="text" placeholder="Name ..." /></div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-2">Phone</div>
                        <div class="col-sm-10">
                            <input asp-for="Phone" class="form-control" type="text" placeholder="Phone ..." />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">Fax</div>
                        <div class="col-sm-10">
                            <input asp-for="Fax" class="form-control" type="text" placeholder="Fax ..." />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">Website</div>
                        <div class="col-sm-10">
                            <input asp-for="Website" class="form-control" type="text" placeholder="Website ..." />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">Email</div>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" type="text" placeholder="Email ..." />
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Invoicing</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                Start creating your amazing application!
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Payment</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                Start creating your amazing application!
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
        <div>
            <input class="btn btn-primary btn-flat" type="submit" value="Save" />
        </div>
    </form>
</div>
<div class="col-md-3">
    @*<fieldset>
        <legend>Fact box</legend>
    </fieldset>*@
</div>