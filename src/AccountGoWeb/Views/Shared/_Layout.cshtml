<!DOCTYPE html>
<html lang="en">
<head>
    <base href="~/" />
    <component type="typeof(Microsoft.AspNetCore.Components.Web.HeadOutlet)" render-mode="ServerPrerendered" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <meta name="description" content="Good Deed Books - Open Source Accounting System" />
    <title>Good Deed Books</title>
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico" />


    <link rel="stylesheet" href="~/GoodBooks.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css?v=20250404-01" asp-append-version="false" />
</head>
<body>
    <header class="bg-dark text-white py-3">
        <div class="container">
            <a class="navbar-brand text-white fw-bold fs-4" href="/">
                GoodBooks
            </a>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <aside class="col-md-2 border-end bg-dark min-vh-100 p-3 position-relative">
                @await Html.PartialAsync("_SidebarNavigation")
            </aside>
            <main class="col-md-10 p-4">
                <h2 class="mb-4">@Html.Raw(ViewBag.PageContentHeader)</h2>
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="bg-dark text-white py-3 border-top mt-auto">
        <div class="container d-flex justify-content-between">
            <span>&copy; @DateTime.Now.Year Good Deed Books</span>
            <span>Powered by <a href="http://accountgo.net" class="text-white text-decoration-none">AccountGo</a></span>
        </div>
    </footer>

    <!-- 필요한 스크립트만 사용 -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/_framework/blazor.server.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
