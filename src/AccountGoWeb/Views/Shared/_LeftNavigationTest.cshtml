@using AccountGoWeb.Models.SubMenu
@model NavigationModel

@if (Model?.SubMenus != null && Model.SubMenus.Any())
{
    <div class="fixed top-0 left-0 h-full w-64 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-100 shadow-lg">
        @await Html.PartialAsync("_Logo")

        <nav class="mt-5">
            <ul class="space-y-2">
                <li>
                    <a href="@Url.Action("MonthlySales", "Dashboard")"
                        class="flex items-center px-4 py-2 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors">
                        <i class="fa fa-dashboard mr-3"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                @foreach (var subMenu in Model.SubMenus)
                {
                    @await Html.PartialAsync("_SubMenu", subMenu)
                }

                <li>
                    <a href="#message"
                        class="flex items-center px-4 py-2 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors">
                        <i class="fa fa-sign-out mr-3"></i>
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}
else
{
    <p class="text-gray-500 dark:text-gray-400">No submenus available.</p>
}