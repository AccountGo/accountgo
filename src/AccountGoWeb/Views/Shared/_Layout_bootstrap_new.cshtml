<!DOCTYPE html>
<html lang="en">

<head>
    <base href="~/" />
    <component type="typeof(Microsoft.AspNetCore.Components.Web.HeadOutlet)"
               render-mode="ServerPrerendered" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="Good Deed Books - Open Source Accounting System">
    <title>Good Deed Books</title>
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico">
    <link rel="stylesheet" href="~/GoodBooks.styles.css" asp-append-version="true" />
    <!-- Icons-->
    @* <link href="~/css/coreui/icons/css/all.min.css" rel="stylesheet"> *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.5.5/css/simple-line-icons.min.css"
        rel="stylesheet">
    <!-- Main styles for this application-->
    <link href="~/css/dark.css" rel="stylesheet">
    <link href="~/css/gdbdark.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/pace-js@latest/pace-theme-default.min.css" rel="stylesheet">

</head>
<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">
    <style>
            nav {
                position: relative;
                margin: 0px;
                top: 0;
                bottom: 0;
                width: 250px;
                background: linear-gradient(to bottom, #007b89, #007b81);
                overflow: hidden; 
            }

            nav ul {
                list-style: none;
                margin: 0;
                padding: 5px;
            }

            nav ul li {
                /* Sub Menu */

            }

            nav ul li a {
                display: block;
                padding: 12px 20px;
                color: lightblue;
                text-decoration: none;
                font-weight: bold;
                -webkit-transition: 0.2s linear;
                -moz-transition: 0.2s linear;
                -ms-transition: 0.2s linear;
                -o-transition: 0.2s linear;
                transition: 0.2s linear;
            }

            nav ul li a:hover {
                background: #1d4f71;
                color: #fff;
            }

            nav ul li a .fa {
                width: 16px;
                text-align: center;
                margin-right: 5px;
                float: right;
            }

            nav ul ul {
                background: rgba(0, 0, 0, 0.2);
            }

            nav ul li ul li a {

            border-left: 4px solid transparent;
            padding: 10px 20px;
        }

            nav ul li ul li a:hover {
                border-left: 4px solid #3498db;
            }

            nav ul::-webkit-scrollbar {
                display: none;
            }

            header.app-header {
                border-bottom: 2px solid #ccc;
                padding: 1rem 0;
            }

            header .fa-book {
                color: #f8f9fa;
            }
    </style>



</body>
</html>