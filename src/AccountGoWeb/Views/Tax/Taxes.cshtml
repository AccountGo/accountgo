@model AccountGoWeb.Models.TaxSystem.TaxSystemViewModel
@using AccountGoWeb.Models;


<style>
    tr th { color: yellow; }
    tr td { color: #fff; }
    .btn { margin-right: 5px; }
</style>


<div class="nav-tabs-custom">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" href="#tab_1" data-bs-toggle="tab">Taxes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#tab_2" data-bs-toggle="tab">Tax Groups</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#tab_3" data-bs-toggle="tab">Item Tax Groups</a>
        </li>
    </ul>


    <div class="tab-content">
        <!-- Taxes Tab -->
        <div class="tab-pane fade show active" id="tab_1">
            <div class="mt-3">
                <a href="~/Tax/AddNewTax" class="btn btn-primary">
                    <i class="fa fa-plus"></i> New Tax
                </a>
            </div>
            <div class="table-responsive mt-3">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Rate (%)</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Taxes != null && Model.Taxes.Any())
                        {
                            @foreach (var tax in Model.Taxes)
                            {
                                <tr>
                                    <td>@tax.TaxCode</td>
                                    <td>@tax.TaxName</td>
                                    <td>@tax.Rate</td>
                                    <td>
                                        <form action="~/Tax/EditTax" method="get" style="display:inline;">
                                            <input type="hidden" name="taxId" value="@tax.Id" />
                                            <button type="submit" class="btn btn-sm btn-info">Edit</button>
                                        </form>
                                        <form action="~/Tax/DeleteTax" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@tax.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this tax?');">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No taxes available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>


        <!-- Tax Groups Tab -->
        <div class="tab-pane fade" id="tab_2">
            <div class="table-responsive mt-3">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Tax Applied To Shipping</th>
                            <th>Active</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var taxGroup in Model.TaxGroups!)
                        {
                            <tr>
                                <td>@taxGroup.Description</td>
                                <td>
                                    <input type="checkbox" disabled @(taxGroup.TaxAppliedToShipping ? "checked" : "") />
                                </td>
                                <td>
                                    <input type="checkbox" disabled @(taxGroup.IsActive ? "checked" : "") />
                                </td>
                                <td>
                                    <form action="~/Tax/DeleteTaxGroup" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@taxGroup.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this tax group?');">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>


        <!-- Item Tax Groups Tab -->
        <div class="tab-pane fade" id="tab_3">
            <div class="table-responsive mt-3">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Fully Exempt</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var itemTaxGroup in Model.ItemTaxGroups!)
                        {
                            <tr>
                                <td>@itemTaxGroup.Name</td>
                                <td>
                                    <input type="checkbox" disabled @(itemTaxGroup.IsFullyExempt ? "checked" : "") />
                                </td>
                                <td>
                                    <form action="~/Tax/DeleteItemTaxGroup" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@itemTaxGroup.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this item tax group?');">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

